@page
@model Proiect.Pages.Athletes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Athlete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Athlete.ID" />
            <div class="form-group">
                <label asp-for="Athlete.Title" class="control-label"></label>
                <input asp-for="Athlete.Title" class="form-control" />
                <span asp-validation-for="Athlete.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Athlete.Name" class="control-label"></label>
                <input asp-for="Athlete.Name" class="form-control" />
                <span asp-validation-for="Athlete.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Athlete.Category" class="control-label"></label>
                <input asp-for="Athlete.Category" class="form-control" />
                <span asp-validation-for="Athlete.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Athlete.NextFight" class="control-label"></label>
                <input asp-for="Athlete.NextFight" class="form-control" />
                <span asp-validation-for="Athlete.NextFight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
